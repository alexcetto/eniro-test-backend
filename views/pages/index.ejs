<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/header %>
</head>
<body class="container">

    <header>
        <h1>Eniro Backend Test</h1>
    </header>

    <main>
        <h2>Request form</h2>
        <form>

          <b>Words:</b> <input type="text" name="words" value="" id="words" />
          <p>Separate each new query by a comma. Example: Kebab, pizza, taxi</p><br>
          <b>Fields:</b>
          	<% for (var i in allowedFilters){ %>
          		<br><input 
	          		type="checkbox" 
	          		name="fields"
	          		value="<%= allowedFilters[i] %>"> <%= allowedFilters[i] %> 
          	<% } %> <br>
          <input type="button" value="accept" id="accept" />
        </form>

        <div id="results"></div>
    </main>

    <footer>
        
    </footer>
    <script type="text/javascript" src="/javascript/main.js"></script>
</body>
</html>